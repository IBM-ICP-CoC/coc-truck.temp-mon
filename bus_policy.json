{
    "label": "Business policy for coc-truck.temp-mon",
    "description": "A super-simple service demo",
    "service": {
      "name": "coc-truck.temp-mon",
      "org": "$HZN_ORG_ID",
      "arch": "amd64",
      "serviceVersions": [
        {
          "version": "1.0.2",
          "priority":{}
        }
      ]
    },
    "properties": [],
    "constraints": [
          "has-temperature-sensor == true"
    ],
    "userInput": [
      {
        "serviceOrgid": "$HZN_ORG_ID",
        "serviceUrl": "coc-truck.temp-mon",
        "serviceVersionRange": "[0.0.1,INFINITY)",
        "inputs": [
            {
                "name": "HUB_URL",
                "value": "$TRUCK_HUB_URL"
            }
        ]
      }
    ]
  }
  